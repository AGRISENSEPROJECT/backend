{
  "info": {
    "name": "Agrisense Backend API",
    "description": "Complete API collection for testing Agrisense backend authentication and farm management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userEmail",
      "value": "test@agrisense.com",
      "type": "string"
    },
    {
      "key": "username",
      "value": "testuser",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.userId) {",
                  "        pm.collectionVariables.set('userId', response.userId);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"username\": \"{{username}}\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "2. Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-otp"]
            }
          }
        },
        {
          "name": "3. Resend OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/resend-otp",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "resend-otp"]
            }
          }
        },
        {
          "name": "4. Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.access_token) {",
                  "        pm.collectionVariables.set('authToken', response.access_token);",
                  "        pm.test('Login successful', function () {",
                  "            pm.expect(response.access_token).to.be.a('string');",
                  "        });",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "5. Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "6. Verify Google Token (Mobile)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.access_token) {",
                  "        pm.collectionVariables.set('authToken', response.access_token);",
                  "        pm.test('Google token verification successful', function () {",
                  "            pm.expect(response.access_token).to.be.a('string');",
                  "        });",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idToken\": \"your-google-id-token-from-mobile-app\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/google/verify-token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "google", "verify-token"]
            }
          }
        },
        {
          "name": "7. Verify Facebook Token (Mobile)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.access_token) {",
                  "        pm.collectionVariables.set('authToken', response.access_token);",
                  "        pm.test('Facebook token verification successful', function () {",
                  "            pm.expect(response.access_token).to.be.a('string');",
                  "        });",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"accessToken\": \"your-facebook-access-token-from-mobile-app\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/facebook/verify-token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "facebook", "verify-token"]
            }
          }
        }
      ]
    },
    {
      "name": "Farm Management",
      "item": [
        {
          "name": "1. Get Farm Registration Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/farm/status",
              "host": ["{{baseUrl}}"],
              "path": ["farm", "status"]
            }
          }
        },
        {
          "name": "2. Create Farm",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.farm && response.farm.id) {",
                  "        pm.collectionVariables.set('farmId', response.farm.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Green Valley Farm\",\n  \"size\": 25.5,\n  \"soilType\": \"loamy\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/farm",
              "host": ["{{baseUrl}}"],
              "path": ["farm"]
            }
          }
        },
        {
          "name": "3. Update Farm Location",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"country\": \"Kenya\",\n  \"district\": \"Nakuru\",\n  \"latitude\": -0.3031,\n  \"longitude\": 36.0800\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/farm/location",
              "host": ["{{baseUrl}}"],
              "path": ["farm", "location"]
            }
          }
        },
        {
          "name": "4. Update Farm Owner Info",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ownerName\": \"John Doe\",\n  \"ownerPhone\": \"+254712345678\",\n  \"ownerEmail\": \"{{userEmail}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/farm/owner",
              "host": ["{{baseUrl}}"],
              "path": ["farm", "owner"]
            }
          }
        },
        {
          "name": "5. Get Farm Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/farm",
              "host": ["{{baseUrl}}"],
              "path": ["farm"]
            }
          }
        }
      ]
    },
    {
      "name": "Email Testing",
      "item": [
        {
          "name": "Test Email Sending",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{userEmail}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/test/email",
              "host": ["{{baseUrl}}"],
              "path": ["test", "email"]
            }
          }
        }
      ]
    }
  ]
}